{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react-native",
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES2022",
    "moduleResolution": "Node16",
    "module": "Node16",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    //"allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "types": [],
    //"paths": {"*": ["node_modules/@types/*", "node_modules/*"]},
    // Causes issues with package.json "exports"
    "forceConsistentCasingInFileNames": false,
    "lib": [
      "es2019",
      "es2020.bigint",
      "es2020.date",
      "es2020.number",
      "es2020.promise",
      "es2020.string",
      "es2020.symbol.wellknown",
      "es2021.promise",
      "es2021.string",
      "es2021.weakref",
      "es2022.array",
      "es2022.object",
      "es2022.string"
    ],

    "baseUrl": "types",
    "typeRoots": ["types"]
  },
  "include": ["src", "bot-sdk"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js"
    //"jest.config.js",
  ],
  "extends": "@react-native/typescript-config/tsconfig.json"
 // "extends": "@tsconfig/react-native/tsconfig.json"
}
